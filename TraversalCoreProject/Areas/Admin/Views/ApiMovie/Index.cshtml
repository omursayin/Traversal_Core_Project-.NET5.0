@model List<ApiMovieViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!-- Basic Bootstrap Table -->
<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">IMDB TOP 100 FİLM LİSTESİ</h5>
    </div>

    <div class="table-responsive text-nowrap">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>#</th>
                    <th>RESİM</th>
                    <th>FİLM ADI</th>
                    <th>IMDB PUANI</th>
                    <th>YAPIM YILI</th>
                    <th>FRAGMAN</th>
                </tr>
            </thead>
            <tbody class="table-border-bottom-0">
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.rank</td>
                        <td><img src="@item.image" style="width:100px; height:100px;" /></td>
                        <td>@item.title</td>
                        <td>@item.rating</td>
                        <td>@item.year</td>
                        <td><a href="/Admin/ApiMovie/@item.rank" class="btn btn-md btn-outline-primary">Fragmanı İzle</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<!--/ Basic Bootstrap Table -->

