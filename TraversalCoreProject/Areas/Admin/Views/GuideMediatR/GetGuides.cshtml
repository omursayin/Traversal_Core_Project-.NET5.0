@model GetGuideByIDQueryResult
@{
    ViewData["Title"] = "GetGuides";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card mb-4">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">Rehber Bilgileri Güncelleme Sayfası</h5>
    </div>
    <div class="card-body">
        <form method="post">
            <input type="hidden" asp-for="GuideID" />
            <div class="mb-3">
                <label class="form-label" for="basic-icon-default-company">REHBER ADI</label>
                <div class="input-group input-group-merge">
                    <span id="basic-icon-default-company2" class="input-group-text">
                        <i class="bx bx-buildings"></i>
                    </span>
                    <input type="text" asp-for="Name" class="form-control" />
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="basic-icon-default-fullname">REHBER AÇIKLAMASI</label>
                <div class="input-group input-group-merge">
                    <span id="basic-icon-default-fullname2" class="input-group-text">
                        <i class="bx bx-calendar"></i>
                    </span>
                    <input type="text" asp-for="Description" class="form-control" />
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Güncelle</button>
        </form>
    </div>
</div>

