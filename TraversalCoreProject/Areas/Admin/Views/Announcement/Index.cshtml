@using DTOLayer.DTOs.AnnouncementDTOs
@model List<AnnouncementListDTO>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

    int count = 0;
}

<!-- Basic Bootstrap Table -->
<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">DUYURU LİSTESİ</h5>
        <a class="btn btn-primary float-end" href="/Admin/Announcement/AddAnnouncement/"><i class="bx bx-plus me-1"></i> Yeni Duyuru Oluştur</a>
    </div>

    <div class="table-responsive text-nowrap">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>#</th>
                    <th>BAŞLIK</th>
                    <th>İÇERİK</th>
                    <th>DETAYLAR</th>
                    <th>EYLEMLER</th>
                </tr>
            </thead>
            <tbody class="table-border-bottom-0">
                @foreach (var item in Model)
                {
                    count++;
                    <tr>
                        <td>@count</td>
                        <td>@item.Title</td>
                        <td>@item.Content</td>
                        <td><a href="/Destination/DestinationDetails/@item.AnnouncementID" class="btn btn-sm btn-outline-primary">Detaylar</a></td>
                        <td>
                            <a class="btn btn-sm btn-danger" href="/Admin/Announcement/DeleteAnnouncement/@item.AnnouncementID"><i class="bx bxs-trash me-1"></i> Sil</a>
                            <a class="btn btn-sm btn-warning" href="/Admin/Announcement/UpdateAnnouncement/@item.AnnouncementID"><i class="bx bx-edit-alt me-1"></i> Güncelle</a>
                            @* <a class="btn btn-primary" href="#"><i class="bx bx-show me-1"></i> Detaylar</a> *@
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<!--/ Basic Bootstrap Table -->

