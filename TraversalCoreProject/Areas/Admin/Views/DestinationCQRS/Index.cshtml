@model List<GetAllDestinationQueryResult>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

    int count = 0;
}

<!-- Basic Bootstrap Table -->
<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">CQRS TUR ROTASI VERİLERİ</h5>
        <a class="btn btn-primary float-end" href="/Admin/DestinationCQRS/AddDestination/"><i class="bx bx-plus me-1"></i> Yeni Tur Rotası Ekle</a>
    </div>

    <div class="table-responsive text-nowrap">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>#</th>
                    <th>ŞEHİR</th>
                    <th>GÜN - GECE</th>
                    <th>FİYAT</th>
                    <th>KAPASİTE</th>
                    <th>EYLEMLER</th>
                </tr>
            </thead>
            <tbody class="table-border-bottom-0">
                @foreach (var item in Model)
                {
                    count++;
                    <tr>
                        <td>@count</td>
                        <td>@item.city</td>
                        <td>@item.daynight</td>
                        <td>$@item.price</td>
                        <td>@item.capacity</td>
                        <td>
                            <a class="btn btn-sm btn-danger" href="/Admin/DestinationCQRS/DeleteDestination/@item.id"><i class="bx bxs-trash me-1"></i> Sil</a>
                            <a class="btn btn-sm btn-warning" href="/Admin/DestinationCQRS/GetDestination/@item.id"><i class="bx bx-edit-alt me-1"></i> Güncelle</a>
                            @* <a class="btn btn-primary" href="#"><i class="bx bx-show me-1"></i> Detaylar</a> *@
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<!--/ Basic Bootstrap Table -->