@model MailRequest
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@if (TempData["AlertMessage"] != null)
{
    <div class="alert alert-success alert-dismissible col-md-4" role="alert">
        @TempData["AlertMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Kapat"></button>
    </div>
}

<div class="card mb-4">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">Yeni Mail Gönderme Sayfası</h5>
    </div>
    <div class="card-body">
        <form method="post">
            <div class="mb-3">
                <label class="form-label" for="basic-icon-default-company">ALICI MAİL ADRESİ</label>
                <div class="input-group input-group-merge">
                    <span id="basic-icon-default-company2" class="input-group-text">
                        <i class="bx bx-envelope"></i>
                    </span>
                    <input type="text" asp-for="ReceiverMail" class="form-control" />
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="basic-icon-default-company">KONU BAŞLIĞI</label>
                <div class="input-group input-group-merge">
                    <span id="basic-icon-default-company2" class="input-group-text">
                        <i class="bx bx-book-content"></i>
                    </span>
                    <input type="text" asp-for="Subject" class="form-control" />
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="basic-icon-default-company">KONU</label>
                <div class="input-group input-group-merge">
                    <span id="basic-icon-default-company2" class="input-group-text">
                        <i class="bx bx-message-square-detail"></i>
                    </span>
                    <textarea class="form-control" asp-for="Body" rows="3"></textarea>
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Mail Gönder</button>
        </form>
    </div>
</div>

<script>
    window.setTimeout(function () {
        $(".alert").fadeTo(500, 0).slideUp(500, function () {
            $(this).remove();
        });
    }, 4000);
</script>