@model Guide

@{
    ViewData["Title"] = "AddGuide";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card mb-4">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">Yeni Rehber Oluşturma Sayfası</h5>
    </div>
    <div class="card-body">
        <form method="post">
            <div class="mb-3">
                <label class="form-label" for="basic-icon-default-company">AD SOYAD</label>
                <div class="input-group input-group-merge">
                    <span id="basic-icon-default-company2" class="input-group-text">
                        <i class="bx bx-user"></i>
                    </span>
                    <input type="text" asp-for="Name" class="form-control" />
                </div>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="form-label" for="basic-icon-default-company">REHBER HAKKINDA</label>
                <div class="input-group input-group-merge">
                    <span id="basic-icon-default-company2" class="input-group-text">
                        <i class="bx bx-message-square-detail"></i>
                    </span>
                    <input type="text" asp-for="Description" class="form-control" />
                </div>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="form-label" for="basic-icon-default-fullname">FOTOĞRAF</label>
                <div class="input-group input-group-merge">
                    <span id="basic-icon-default-fullname2" class="input-group-text">
                        <i class="bx bx-calendar"></i>
                    </span>
                    <input type="file" asp-for="Image" class="form-control" />
                </div>
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="form-label" for="basic-icon-default-email">INSTAGRAM ADRESİ</label>
                <div class="input-group input-group-merge">
                    <span class="input-group-text">
                        <i class="bx bxl-instagram"></i>
                    </span>
                    <input type="text" asp-for="InstagramUrl" class="form-control" />
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="basic-icon-default-email">TWITTER ADRESİ</label>
                <div class="input-group input-group-merge">
                    <span class="input-group-text">
                        <i class="bx bxl-twitter"></i>
                    </span>
                    <input type="text" asp-for="TwitterUrl" class="form-control" />
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Kaydet</button>
        </form>
    </div>
</div>

