@model List<Guide>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

    int count = 0;
}

<!-- Basic Bootstrap Table -->
<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">REHBER LİSTESİ</h5>
        <a class="btn btn-primary float-end" href="/Admin/Guide/AddGuide/"><i class="bx bx-plus me-1"></i> Yeni Rehber Ekle</a>
    </div>

    <div class="table-responsive text-nowrap">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>#</th>
                    <th>GÖRSEL</th>
                    <th>AD SOYAD</th>
                    <th>AÇIKLAMA</th>
                    <th>DURUM</th>
                    <th>EYLEMLER</th>
                </tr>
            </thead>
            <tbody class="table-border-bottom-0">
                @foreach (var item in Model)
                {
                    count++;
                    <tr>
                        <td>@count</td>
                        <td><img src="@item.Image" alt="Avatar" class="rounded-circle" style="width:75px; height:75px;" /></td>
                        <td>@item.Name</td>
                        <td>@item.Description</td>
                        
                            @{
                                if (item.Status == true)
                                {
                                <td><a href="/Admin/Guide/ChangeToFalse/@item.GuideID" class="btn btn-success">Pasif Yap</a></td>
                            }
                            else
                            {
                                <td><a href="/Admin/Guide/ChangeToTrue/@item.GuideID" class="btn btn-secondary">Aktif Yap</a></td>
                            }
                        }
                        
                        <td>
                            <a class="btn btn-sm btn-danger" href="/Admin/Guide/DeleteGuide/@item.GuideID"><i class="bx bxs-trash me-1"></i> Sil</a>
                            <a class="btn btn-sm btn-warning" href="/Admin/Guide/UpdateGuide/@item.GuideID"><i class="bx bx-edit-alt me-1"></i> Güncelle</a>
                            @* <a class="btn btn-primary" href="#"><i class="bx bx-show me-1"></i> Detaylar</a> *@
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<!--/ Basic Bootstrap Table -->
