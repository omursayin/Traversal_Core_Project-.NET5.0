@model UpdateRoleViewModel
@{
    ViewData["Title"] = "UpdateRole";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card mb-4">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">Rol Güncelleme Sayfası</h5>
    </div>
    <div class="card-body">
        <form method="post">
            <input type="hidden" asp-for="RoleID" />
            <div class="mb-3">
                <label class="form-label" for="basic-icon-default-company">ROL ADI</label>
                <div class="input-group input-group-merge">
                    <span id="basic-icon-default-company2" class="input-group-text">
                        <i class="bx bx-user"></i>
                    </span>
                    <input type="text" asp-for="RoleName" class="form-control" />
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Güncelle</button>
        </form>
    </div>
</div>

