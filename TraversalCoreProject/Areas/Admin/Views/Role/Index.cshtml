@model List<AppRole>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

    int count = 0;
}

<!-- Basic Bootstrap Table -->
<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">ROL LİSTESİ</h5>
        <a class="btn btn-primary float-end" href="/Admin/Role/AddRole/"><i class="bx bx-plus me-1"></i> Yeni Rol Ekle</a>
    </div>

    <div class="table-responsive text-nowrap">
        @if (Model.Count > 0)
        {
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>ROL ADI</th>
                        <th>EYLEMLER</th>
                    </tr>
                </thead>
                <tbody class="table-border-bottom-0">
                    @foreach (var item in Model)
                    {
                        count++;
                        <tr>
                            <td>@count</td>
                            <td>@item.Name</td>
                            <td>
                                <a class="btn btn-sm btn-danger" href="/Admin/Role/DeleteRole/@item.Id"><i class="bx bxs-trash me-1"></i> Sil</a>
                                <a class="btn btn-sm btn-warning" href="/Admin/Role/UpdateRole/@item.Id"><i class="bx bx-edit-alt me-1"></i> Güncelle</a>
                                @* <a class="btn btn-primary" href="#"><i class="bx bx-show me-1"></i> Detaylar</a> *@
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="alert alert-danger text-center mx-4" role="alert">Herhangi bir 'Rol' bulunamadı!</div>
        }
    </div>
</div>
<!--/ Basic Bootstrap Table -->
