@model List<RoleAssignViewModel>
@{
    ViewData["Title"] = "AssignRole";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card mb-4">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">Rol Atama Sayfası</h5>
    </div>
    <div class="card-body">
        <form method="post">
            @for (int i = 0; i < Model.Count; i++)
            {
                <div class="mb-3">
                    <input type="hidden" asp-for="@Model[i].RoleID" />
                    <input type="hidden" asp-for="@Model[i].RoleName" />
                    <input type="checkbox" class="form-check-input me-1" asp-for="@Model[i].RoleExist" />
                    <label class="form-check-label" for="@Model[i].RoleExist">@Model[i].RoleName</label>
                </div>
            }
            <button type="submit" class="btn btn-primary">Kaydet</button>
        </form>
    </div>
</div>