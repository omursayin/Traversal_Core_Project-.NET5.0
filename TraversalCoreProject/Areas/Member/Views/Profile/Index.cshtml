@model UserEditViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_MemberLayout.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h2>Profil Düzenleme Sayfası</h2>
                <a class="heading-elements-toggle"><i class="la la-ellipsis-v font-medium-3"></i></a>
                <div class="heading-elements">
                    <ul class="list-inline mb-0">
                        <li><a data-action="collapse"><i class="ft-minus"></i></a></li>
                        <li><a data-action="reload"><i class="ft-rotate-cw"></i></a></li>
                        <li><a data-action="expand"><i class="ft-maximize"></i></a></li>
                        <li><a data-action="close"><i class="ft-x"></i></a></li>
                    </ul>
                </div>
            </div>
            <div class="card-content collapse show">
                <div class="card-body">
                    <p class="card-text">Profil ile ilgili bilgilerinizi aşağıdaki form ile düzenleyebilirsiniz. </p>
                    <p><span class="text-bold-600"></span> </p>
                    <form class="form">
                        <div class="form-body">
                            <div class="form-group">
                                <label for="donationinput2" class="sr-only">İsim</label>
                                <input type="text" class="form-control" asp-for="Name">
                            </div>
                            <div class="form-group">
                                <label for="donationinput2" class="sr-only">Soyisim</label>
                                <input type="text" class="form-control" asp-for="Surname">
                            </div>
                            <div class="form-group">
                                <label for="donationinput3" class="sr-only">E-Mail</label>
                                <input type="email" class="form-control" asp-for="Email">
                            </div>

                            <div class="form-group">
                                <label for="donationinput3" class="sr-only">Telefon</label>
                                <input type="tel" class="form-control" asp-for="PhoneNumber">
                            </div>

                            <div class="form-group">
                                <label for="donationinput3" class="sr-only">Şifre</label>
                                <input type="password" class="form-control" asp-for="Password">
                            </div>

                            <div class="form-group">
                                <label for="donationinput3" class="sr-only">Telefon</label>
                                <input type="password" class="form-control" asp-for="ConfirmPassword">
                            </div>

                            <div class="form-group">
                                <label for="donationinput3" class="sr-only">Telefon</label>
                                <input type="file" class="form-control" asp-for="Image">
                            </div>

                        </div>
                        <div class="form-actions center">
                            <button type="submit" class="btn btn-outline-primary">KAYDET</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
