@model List<Reservation>

@{
    ViewData["Title"] = "MyApprovalreservation";
    Layout = "~/Views/Shared/_MemberLayout.cshtml";

    int count = 0;
}

<!-- Basic Tables start -->
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h2>Onay Bekleyen Rezervasyonlar</h2>
                <a class="heading-elements-toggle"><i class="la la-ellipsis-v font-medium-3"></i></a>
                <div class="heading-elements">
                    <ul class="list-inline mb-0">
                        <li><a data-action="collapse"><i class="ft-minus"></i></a></li>
                        <li><a data-action="reload"><i class="ft-rotate-cw"></i></a></li>
                        <li><a data-action="expand"><i class="ft-maximize"></i></a></li>
                        <li><a data-action="close"><i class="ft-x"></i></a></li>
                    </ul>
                </div>
            </div>
            <div class="card-content collapse show">
                <div class="card-body">
                    <p class="card-text">Onay bekleyen rezervasyonlarınızın detayları aşağıda listelenmiştir. </p>
                    <p><span class="text-bold-600"></span> </p>
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>ŞEHİR</th>
                                    <th>KİŞİ SAYISI</th>
                                    <th>REZERVASYON TARİHİ</th>
                                    <th>DURUM</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    count++;
                                    <tr>
                                        <th scope="row">@count</th>
                                        <td>@item.Destination.City</td>
                                        <td>@item.PersonCount</td>
                                        <td>@(((DateTime)item.ReservationDate).ToString("dd MMMM yyyy"))</td>
                                        <td>@item.Status</td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Basic Tables end -->

